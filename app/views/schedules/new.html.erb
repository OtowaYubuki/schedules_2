<h2>スケジュール新規作成</h2>
<%= form_with model: @Schedule do |f| %>
 <table>
  <tr>
   <th><%= f.label :title,"タイトル" %></th>
   <td><%= f.text_field :title %></td>
  </tr>
  <tr>
   <th><%= f.label :start,"開始日" %></th>
   <td><%= f.date_field :start %></td>
  </tr>
  <tr>
   <th><%= f.label :end,"終了日" %></th>
   <td><%= f.date_field :end %></td>
  </tr>
  <tr>
   <th><%= f.label :day,"終日" %></th>
   <td><%= f.check_box :day %></td>
   <p id ="check">終日の場合はチェックを入れます</p>
  </tr>
  <tr>
   <th><%= f.label :memo,"スケジュールメモ" %></th>
   <td><%= f.text_area :memo %></td>
  </tr>
 </table>
 <div>
  <ul>
   <li id = "li_1"><%= f.submit "登録完了する" %></li>
   <li id = "li_2"><%= link_to "スケジュール一覧に戻る", :schedules %></li>
  </ul>
 </div>
<% end %>]
<footer>
<h1>現在の日時:<%= Date.current.strftime('%Y年 %m月 %d日') %></h1>
</footer>