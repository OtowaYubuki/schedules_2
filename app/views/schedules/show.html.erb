<h2>スケジュール詳細</h2>
<table>
 <tr>
  <th>タイトル</th>
  <td><%= @schedule.title %></td>
 </tr>
 <tr>
  <th>開始日</th>
  <td><%= @schedule.start %></td>
 </tr>
 <tr>
  <th>投稿日時</th>
  <td><%= @schedule.created_at.to_s(:datetime_jp) %></td>
 </tr>
 <tr>
  <th>終日</th>
  <td>
    <% if @schedule.day == true %>
     ◯
    <% else @schedule.day == false %>
    <% end %>
  </td>
 </tr>
 <tr>
  <th>スケジュールメモ</th>
  <td><%= @schedule.memo %></td>
 </tr>
</table>
<div>
<ul>
  <li id = "show"><%= link_to "スケジュール一覧に戻る", :schedules %></li>
  <li id = "show_1"><%= link_to "スケジュールを編集する", edit_schedule_path(@schedule.id) %></li>
  <li id = "show_2"><%= link_to "スケジュールを削除", schedule_path, method: :delete %></li>
</ul>
</div>
<footer>
<h1>現在の日時:<%= Date.current.strftime('%Y年 %m月 %d日') %></h1>
</footer>